{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "import" : ["@cspell/dict-tr-tr/cspell-ext.json"],
  "files": [
    "frontend/src",
    "backend/src"
  ],
  "ignorePaths": [
    "**/node_modules",
    "**/dist",
    "**/public",
    "**/*.lock",
    "**/package-lock.json"
  ],
  "words": [
    "chakra",
    "plms"
  ],
  "dictionaries": [
    "typescript",
    "node",
    "softwareTerms",
    "html",
    "css",
    "tr-tr"
  ],
  "enableFiletypes": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "md",
    "css",
    "scss"
  ]
}
